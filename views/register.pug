extends layout

block content

    form(action="/users/register" method="POST" id="registerUser")
        label Role
        input(type="text", name="role" value="new" class="rolein" readonly)
        br 
        label First name
        input(type="text", name="firstName" class="firstin")
        br
        label Last name
        input(type="text", name="lastName" class="lastin")
        br
        label Email
        input(type="text", name="email" class="emailin")
        br
        label Password
        input(type="password", name="password" class="passwordin")
        br
        label Password repeat
        input(type="password", name="password2")
        br 
        button(type="submit" class="go" id="goreg") GO
    
    p.wrong= wrong




